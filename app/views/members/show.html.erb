<div class='row'>
	<div class='span6'>
		<div class='pull-left'>
			<div class='member_info'>
			  <%= gravatar_for @member, size: 150 %><br/><br/>
			  <h2><%= @member.name %></h2>
			  <h3><%= @member.email %></h3>
				<br/><br/>
			</div>
		</div>
	</div>
	<div class='span6'>
		<div class='pull-left'>
			<div class='ratings'>
				<h2>Ratings</h2> <i class="icon-search"> </i>
				<br/>
				<% @ratings.each do |rating| %>
					<h3>
						<%= link_to rating.beer.name, rating_url(rating.id) %>
						<% if rating.score %> 
							<span id='rating_score_on_profile' class='star readOnly'><%= rating.score %></span>
						<% end %>
						<span class='grey'><%= link_to 'Edit', edit_rating_url(rating.id, :beer_id => rating.beer.id) %></span>
						<span class='grey'><%= link_to 'Delete', rating_url(rating.id), method: :delete, confirm: 'Are you sure you want to delete your rating?' %></span>
					</h3>
					<p class='grey'><%= time_ago_in_words(rating.created_at) %> ago.</p>
					<div class='span6'></div><hr/>
				<% end %>
				<%= will_paginate @ratings %>
			</div>
		</div>
		<div class='pull-left'>
			<div class='tweets'>
				<h2>#beeron2012 Feed</h2>
				<br/>
				<% @tweets.reverse.each do |tweet| %>
					<h3>
						<%= link_to tweet[:from_user_name], "https://twitter.com/#!/#{tweet[:from_user]}" %> 
						<span class='grey'>@<%= tweet[:from_user] %></span>
					</h3>
					<p><%= tweet[:text] %></p>
					<p class='grey'><%= time_ago_in_words(tweet[:created_at]) %> ago.</p>
					<div class='span6'></div><hr/>
				<% end %>
			</div>
		</div>
	</div>
</div>