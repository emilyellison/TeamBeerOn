<% if @beers.count == 1 %>
	<script type="text/javascript">
	  $(function(){
	  	$("div#beer_recommendation_list").carousel( { direction: 'vertical', loop: true, dispItems: 1, pagination: false, effect: 'slow' });
	  });
	</script>	
	<style type='text/css'>
		.carousel-control.previous.carousel-previous, .carousel-control.next.carousel-next {
			opacity:0;
		}
	</style>
<% else %>
	<script type="text/javascript">
	  $(function(){
	  	$("div#beer_recommendation_list").carousel( { direction: 'vertical', loop: true, dispItems: 1, pagination: true, paginationPosition: 'inside', effect: 'slow', btnsPosition: 'inside', animSpeed: "slow" });
	  });
	</script>
<% end %>