<h2>What are you in the mood for?</h2>

<%= search_form_for @q, url: recommendation_url, method: :post do |f| %>
	<div class='column'>
		<h3>
			Style
		</h3>
		<%= f.select(:style_cont, @styles, include_blank: true) %><br/>
	</div>
	<div class='column'>
		<h3>
			Characteristics
		</h3>
			<% @characteristics_array.each do |char| %>
				<% char.each do |key, value| %>
					<%= f.label value[:search_term], value[:label], class: 'button', id: "label_#{value[:search_term]}" %>
					<%= f.check_box value[:search_term], style: 'visibility:hidden' %>
				<% end %>
			<% end %>
	</div>
	<div class='floor'>
		<%= f.submit 'Beer Me', class: 'button' %>
	</div>
<% end %>



	