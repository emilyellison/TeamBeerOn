<div id='beer_me_form'>
	<%= search_form_for @q, remote: :true do |f| %>
		<div class='column'>
			<h3>
				Style
			</h3>
			<%= f.select(:style_cont, @styles, include_blank: true) %><br/>
		</div>
		<div class='column'>
			<h3>
				Characteristics
			</h3>
			<div id='checkbox_section'>
				<% @characteristics_array.each do |char| %>
					<% char.each do |name, desc| %>
						<%= params[:q][desc[:search_term]].inspect if params[:q] %>
						<% if params[:q] && params[:q][desc[:search_term]] == "1" %>
							<%= f.label desc[:search_term], "#{desc[:label]} (#{desc[:number_of_beers]})", class: 'checked', id: "label_#{desc[:search_term]}" %>
							<%= f.check_box desc[:search_term], style: 'visibility:hidden' %>						
						<% elsif desc[:number_of_beers] > 0 %>
							<%= f.label desc[:search_term], "#{desc[:label]} (#{desc[:number_of_beers]})", class: 'button', id: "label_#{desc[:search_term]}" %>
							<%= f.check_box desc[:search_term], style: 'visibility:hidden' %>
						<% else %>
							<%= f.label desc[:search_term], "#{desc[:label]} (#{desc[:number_of_beers]})", class: 'disabled', id: "label_#{desc[:search_term]}" %>
							<br/><br/>
						<% end %>
					
					<% end %>
				<% end %>
			</div>
		</div>
		<div class='floor'>
			<%= f.submit 'Beer Me' %>
		</div>
	<% end %>
</div>