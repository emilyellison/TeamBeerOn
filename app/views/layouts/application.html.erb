<!DOCTYPE html>
<html>
	<head>
	  <title>BeerOn</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class='body_of_beeron'>
			<div class='container'>
				<% if flash[:success] %>
					<p class='alert alert-success'>
						<%= flash[:success] %>
					</p>
				<% end %>
				<% if flash[:notice] %>
					<p class='alert alert-notice'>
						<%= flash[:notice] %>
					</p>
				<% end %>
				<% if flash[:error] %>
					<p class='alert alert-error'>
						<%= flash[:error] %>
					</p>
				<% end %>
				<%= yield %>
			</div>
		</div>
		<%= render 'layouts/footer' %>
	</body>
</html>
